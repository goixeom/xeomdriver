<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_circle_dialog"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="25dp">

    <com.goixeomdriver.View.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Bạn có chắc muốn kết thúc chuyến đi này ?"
        android:textSize="22dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:gravity="center"
>

        <Button
            android:id="@+id/agree_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bt_sure"
            android:textColor="@color/colorWhite"
            android:layout_marginRight="10dp"
/>

        <Button
            android:id="@+id/back_txt"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_bt_back"
            android:gravity="center"
            android:layout_marginLeft="10dp"

            />
    </LinearLayout>
</LinearLayout>
