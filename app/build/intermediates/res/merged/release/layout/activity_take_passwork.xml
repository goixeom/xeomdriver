<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.goixeom.huy.goixeomdriver.Activity.TakePassworkActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_weight="0.5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/send_imv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/imageView"
            android:layout_gravity="left"
            android:layout_marginBottom="-12dp"
            android:layout_marginLeft="-30dp"
            android:layout_marginTop="15dp"
            app:srcCompat="@drawable/ic_email_send_pass" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="190dp"
            android:layout_height="40dp"
            android:layout_alignEnd="@+id/linearLayout3"
            android:layout_below="@+id/send_imv"
            android:layout_marginEnd="11dp"
            android:paddingLeft="10dp"
            app:srcCompat="@drawable/ic_logo_black" />

        <LinearLayout
            android:id="@+id/linearLayout3"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_centerHorizontal="true"
            android:paddingRight="10dp">

            <View
                android:layout_width="wrap_content"
                android:layout_height="1.5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:background="@color/colorGreen" />

            <com.goixeomdriver.View.CustomTextView
                android:id="@+id/customTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="5dp"
                android:text="LẤY LẠI MẬT KHẨU"
                android:textColor="@color/colorGreen"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginTop="25dp"
        android:layout_weight="3">

        <com.goixeomdriver.View.CustomEditText
            android:id="@+id/edt_email"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:singleLine="true"
            android:layout_marginTop="25dp"
            android:background="@drawable/dashed_border"
            android:hint="@string/hint_5"
            android:paddingLeft="15dp"
            android:textColorHint="#a1a1a3" />

        <com.goixeomdriver.View.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/circle_border"
            android:padding="5dp"
            android:text="Email"
            android:textColor="@color/colorWhite"
            android:textSize="10dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/sendpasswork_txt"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_gravity="center|bottom"
        android:foreground="?selectableItemBackground"
        android:background="@color/colorGreen"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_send"
            android:layout_marginRight="5dp"/>

        <com.goixeomdriver.View.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Gửi lại mật khẩu cho tôi"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
