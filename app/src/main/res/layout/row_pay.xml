<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pay_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@+id/toolbar"
    android:background="@color/colorBlue"
    android:gravity="center_horizontal"
    android:visibility="visible"
    android:orientation="vertical">

    <com.goixeomdriver.View.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Cước phí chuyến"
        android:textColor="@color/colorAccent"
        android:layout_weight="0.2"
        android:layout_marginTop="20dp"
        android:textSize="30dp"
        android:textStyle="bold" />

    <com.goixeomdriver.View.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="bottom"
        android:text="Tiền Mặt"
        android:textColor="@color/colorGray"
        android:layout_marginTop="20dp"

        android:textSize="20dp" />

    <com.goixeomdriver.View.CustomTextView
        android:id="@+id/tv_cost_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:gravity="center_vertical"
        android:text="36.000 đ"
        android:textColor="@color/colorAccent"
        android:textSize="40dp"
        android:textStyle="bold" />




    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingRight="10dp">

        <include layout="@layout/row_place_pay" />

        <com.goixeomdriver.View.CustomTextView
            android:id="@+id/tv_distance_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_toStartOf="@+id/place_layout"
            android:paddingTop="20dp"
            android:rotation="270"
            android:singleLine="true"
            android:text="1.5km"
            android:textColor="@color/colorGray"
            android:textSize="14sp"
            android:textStyle="bold" />

    </RelativeLayout>
    <LinearLayout
        android:id="@+id/ll_root_promotion_pay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:visibility="visible"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_coupon" />

        <com.goixeomdriver.View.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="KHUYẾN MÃI"
            android:textColor="@color/colorRed"
            android:textStyle="bold" />
    </LinearLayout>

    <com.goixeomdriver.View.CustomTextView
        android:id="@+id/pay_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="20dp"
        android:visibility="visible"
        android:layout_weight="0.2"
        android:paddingRight="20dp"
        android:textColor="@color/colorGreen"
        android:textSize="13dp" />
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.5">

        <com.goixeomdriver.View.CustomTextView
            android:id="@+id/tv_time_pay"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:text="20/06/2017"
            android:textColor="@color/colorGreen"
            android:textSize="13dp" />

        <com.goixeomdriver.View.CustomTextView
            android:id="@+id/customTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="17:06"
            android:textColor="@color/colorGreen"
            android:textSize="13dp"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/agree_layout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorGreen"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            app:srcCompat="@drawable/ic_like" />

        <com.goixeomdriver.View.CustomTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="5dp"
            android:text="ĐỒNG Ý"
            android:textColor="@color/colorWhite"
            android:textSize="18dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>
