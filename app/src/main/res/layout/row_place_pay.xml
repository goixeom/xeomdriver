<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/place_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="60dp"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-10dp"
        android:gravity="center"
        android:orientation="vertical"
       >

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:layout_gravity="top"
            android:background="@drawable/border_circle"
            android:src="@drawable/border_circle" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            app:srcCompat="@drawable/ic_line" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="10dp"
            android:layout_height="13dp"
            android:layout_gravity="top"
            app:srcCompat="@drawable/ic_end" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"


        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.goixeomdriver.View.CustomTextView
                android:id="@+id/customTextView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Điểm đón"
                android:textColor="#a3a3a3" />

            <com.goixeomdriver.View.CustomTextView
                android:id="@+id/tv_time_start_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 123dm"
                android:textColor="#a3a3a3"
                android:textSize="12sp" />
        </LinearLayout>


        <com.goixeomdriver.View.CustomTextView

            android:id="@+id/tv_address_from_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:isScrollContainer="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Địa điểm đón asdasdsadsadsadasdsadasdsadádasdsadsadasdasdas"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.goixeomdriver.View.CustomTextView
                android:id="@+id/customTextView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Hoàn thành"
                android:textColor="#a3a3a3" />

            <com.goixeomdriver.View.CustomTextView
                android:id="@+id/tv_time_end_pay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text=" Hoàn thành"
                android:textColor="#a3a3a3"
                android:textSize="12sp" />
        </LinearLayout>

        <com.goixeomdriver.View.CustomTextView
            android:id="@+id/tv_address_des_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:isScrollContainer="true"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:singleLine="true"
            android:text="Địa điểm đến"
            android:textColor="@color/colorWhite"
            android:textSize="18dp" />
    </LinearLayout>
</LinearLayout>
