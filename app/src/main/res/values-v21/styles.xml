<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RobotoFont" parent="android:Widget.Holo.Light.TextView">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/colorTextView</item>
        <item name="android:lineSpacingExtra">3dp</item>
    </style>

    <style name="AppThemeSlider" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/colorTextView</item>
    </style>

    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="android:colorControlActivated">@color/colorPrimary</item>
    </style>
</resources>